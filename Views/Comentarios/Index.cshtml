@model IEnumerable<amazon.Models.Comentario>

@{
    ViewData["Title"] = "Comentarios de Servicios";
    var comentariosAgrupados = Model.GroupBy(c => c.ServicioRealizado?.Servicio?.Nombre);
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="fas fa-comments"></i> @ViewData["Title"]
                </h2>
                @if (User.IsInRole("3"))
                {
                    <a asp-action="MisComentarios" class="btn btn-outline-primary">
                        <i class="fas fa-user-comments"></i> Ver Mis Comentarios
                    </a>
                }
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No hay comentarios disponibles en este momento.
        </div>
    }
    else
    {
        <!-- Estadísticas generales -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Estadísticas</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>
                                <i class="fas fa-star text-warning"></i> Promedio calificación:
                            </span>
                            <span class="badge bg-warning">
                                @Model.Average(c => c.Calificacion).ToString("F1")
                            </span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>
                                <i class="fas fa-comments"></i> Total comentarios:
                            </span>
                            <span class="badge bg-primary">@Model.Count()</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de comentarios agrupados por servicio -->
        @foreach (var grupo in comentariosAgrupados)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-wrench text-primary"></i> @grupo.Key
                        <span class="badge bg-secondary ms-2">
                            @grupo.Count() comentario@(grupo.Count() != 1 ? "s" : "")
                        </span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var comentario in grupo)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-header bg-white">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0">@comentario.Usuario.Nombre</h6>
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar-alt"></i>
                                                    @comentario.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                            <div class="rating">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fas fa-star @(i <= comentario.Calificacion ? "text-warning" : "text-muted")"></i>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <!-- Información del vehículo -->
                                        <div class="mb-2">
                                            <strong><i class="fas fa-car"></i> Vehículo:</strong>
                                            @comentario.ServicioRealizado?.Vehiculo?.Marca
                                            @comentario.ServicioRealizado?.Vehiculo?.Modelo
                                            (@comentario.ServicioRealizado?.Vehiculo?.Placa)
                                        </div>
                                        <!-- Información del servicio -->
                                        <div class="mb-2">
                                            <strong><i class="fas fa-wrench"></i> Servicio:</strong>
                                            @comentario.ServicioRealizado?.Servicio?.Nombre
                                        </div>
                                        <p class="card-text">@comentario.Contenido</p>
                                        @if (comentario.FechaModificacion.HasValue)
                                        {
                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    <i class="fas fa-edit"></i>
                                                    Editado: @comentario.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // Animación de entrada para las cards
            $('.card').each(function (index) {
                $(this).delay(index * 100).animate({
                    opacity: 1,
                    transform: 'translateY(0)'
                }, 500);
            });
        });
    </script>
}

@section Styles {
    <style>
        .rating {
            color: #ffd700;
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }

            .btn-group .btn i {
                margin: 0;
            }

        .card-footer {
            background-color: rgba(0, 0, 0, 0.03);
        }
    </style>
}