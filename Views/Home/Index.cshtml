@{
    ViewData["Title"] = "MARLAND - Taller Automotriz Especializado";
}

<div class="container py-4">
    <!-- Panel de bienvenida personalizado -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <h2 class="text-primary fw-bold mb-2">¡Bienvenido a MARLAND!</h2>
                    <p class="lead mb-3">Su taller automotriz de confianza con más de 20 años de experiencia.</p>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Servicios Destacados -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0"><i class="fas fa-star text-warning"></i> Servicios Destacados</h5>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-oil-can text-primary fa-3x"></i>
                            </div>
                            <h5 class="card-title">Cambio de Aceite</h5>
                            <p class="card-text">Mantenimiento básico para el óptimo funcionamiento de su motor.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-car-battery text-primary fa-3x"></i>
                            </div>
                            <h5 class="card-title">Sistema Eléctrico</h5>
                            <p class="card-text">Diagnóstico y reparación de problemas eléctricos de su vehículo.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-tools text-primary fa-3x"></i>
                            </div>
                            <h5 class="card-title">Mecánica General</h5>
                            <p class="card-text">Servicios completos de reparación y mantenimiento para su vehículo.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Información del Taller con Diseño Mejorado -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0"><i class="fas fa-info-circle text-primary"></i> Sobre MARLAND</h5>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <!-- Texto -->
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h3 class="h4 fw-bold mb-3">Taller Automotriz Especializado</h3>
                    <p class="text-muted">Con más de 20 años de experiencia, en MARLAND ofrecemos reparación y mantenimiento para todas las marcas. Contamos con mecánicos certificados que garantizan un servicio de calidad, eficiencia y confianza.</p>
                    <div class="d-flex flex-wrap gap-2 mt-3">
                        <span class="badge bg-light text-dark border p-2"><i class="fas fa-tools text-primary me-1"></i> Mecánica General</span>
                        <span class="badge bg-light text-dark border p-2"><i class="fas fa-oil-can text-primary me-1"></i> Cambio de Aceite</span>
                        <span class="badge bg-light text-dark border p-2"><i class="fas fa-car-battery text-primary me-1"></i> Sistema Eléctrico</span>
                        <span class="badge bg-light text-dark border p-2"><i class="fas fa-search text-primary me-1"></i> Diagnóstico</span>
                    </div>
                </div>

                <!-- Imágenes con distribución balanceada -->
                <div class="col-lg-6">
                    <div class="row g-2">
                        <div class="col-6">
                            <img src="~/images/1.jpg" class="img-fluid rounded shadow-sm" alt="Imagen 1">
                        </div>
                        <div class="col-6">
                            <img src="~/images/2.jpg" class="img-fluid rounded shadow-sm" alt="Imagen 2">
                        </div>
                        <div class="col-6">
                            <img src="~/images/3.jpg" class="img-fluid rounded shadow-sm" alt="Imagen 3">
                        </div>
                        <div class="col-6">
                            <img src="~/images/4.jpg" class="img-fluid rounded shadow-sm" alt="Imagen 4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @if (TempData["UserIdMessage"] != null)
    {
        <div class="alert alert-info mt-4">
            @TempData["UserIdMessage"]
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border-radius: 0.5rem;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
            }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .badge {
            font-weight: 500;
        }

        .card-body p {
            font-size: 1rem;
            line-height: 1.6;
        }

        .card-body .row.g-2 img {
            object-fit: cover;
            height: 140px;
        }

    </style>
}