@model amazon.Models.ServicioRealizado

@{
    ViewData["Title"] = "Eliminar Servicio Realizado";
}

<h2>@ViewData["Title"]</h2>

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card p-4 shadow-lg col-md-6 text-center">
        <h2 class="text-center mb-4">Eliminar Servicio Realizado</h2>
        <h3>¿Está seguro que desea eliminar este registro?</h3>
        <div class="my-3">
            <h4><strong>Servicio ID:</strong> @Model.ServicioId</h4>
            <h4><strong>Usuario ID:</strong> @Model.UsuarioId</h4>
            <p><strong>Precio:</strong> @Model.Precio</p>
            <p><strong>Fecha:</strong> @Model.Fecha</p>
        </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
