@model amazon.Models.ServicioRealizado

@{
    ViewData["Title"] = "Crear Servicio Realizado";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ServicioId" class="control-label">Servicio Realizado</label>
        <select asp-for="ServicioId" class="form-control" asp-items="@ViewBag.ServicioId"></select>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioId" class="control-label">Cliente</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="@ViewBag.UsuarioId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Precio" class="control-label">Precio</label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha" class="control-label">Fecha</label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
