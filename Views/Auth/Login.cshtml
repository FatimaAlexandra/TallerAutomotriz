@model amazon.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<style>
    .background-image {
        background-image: url('../images/f.jpg');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        position: relative;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Ajusta el último valor (0.5) para cambiar la opacidad */
    }
</style>

<div class="background-image">
    <div class="overlay"></div>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-sm" style="width: 24rem;">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Login</h3>
                <form asp-action="Login">
                    <div class="form-group mb-3">
                        <label asp-for="Usuario1" class="form-label">Usuario</label>
                        <input asp-for="Usuario1" class="form-control" />
                        <span asp-validation-for="Usuario1" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Clave" class="form-label">Password</label>
                        <input asp-for="Clave" type="password" class="form-control" />
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
                <div class="text-center mt-3">
                    <p>¿No tienes una cuenta? <a href="@Url.Action("Register", "Auth")">Regístrate</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
