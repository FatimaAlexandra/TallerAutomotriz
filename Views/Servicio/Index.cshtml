@model List<amazon.Models.Servicio>

@{
    ViewData["Title"] = "Lista de Servicios";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <!-- Encabezado con botón -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 fw-bold text-primary mb-0">
                    <i class="fas fa-list me-2"></i> Lista de Servicios
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-1"></i> Crear Servicio
                </a>
            </div>

            <!-- Tabla de servicios -->
            <div class="table-responsive">
                <table id="serviciosTable" class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Categoría</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var servicio in Model)
                        {
                            <tr>
                                <td>@servicio.Id</td>
                                <td>@servicio.Nombre</td>
                                <td>@servicio.Descripcion</td>
                                <td>@servicio.Categoria</td>
                                <td>
                                    <div class="card border-0 bg-white px-2 py-1 shadow-sm">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@servicio.Id"
                                               class="btn btn-icon-only btn-sm btn-outline-warning rounded-circle"
                                               title="Editar">
                                                <i class="fas fa-pen-to-square"></i>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@servicio.Id"
                                               class="btn btn-icon-only btn-sm btn-outline-danger rounded-circle"
                                               title="Eliminar">
                                                <i class="fas fa-trash-can"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-repeat: repeat;
            background-size: contain;
            background-attachment: fixed;
            background-position: top center;
        }

        .container {
            background-color: transparent;
        }

        .card {
            border-radius: 0.75rem;
            background-color: #ffffff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        }

        .table thead th {
            white-space: nowrap;
        }

        .btn-icon-only {
            width: 36px;
            height: 36px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            font-size: 1rem;
            transition: all 0.2s ease-in-out;
        }

            .btn-icon-only:hover {
                opacity: 0.85;
                transform: scale(1.05);
            }

        .table-hover tbody tr:hover {
            background-color: #f3f6f9;
        }

        /* Estilizar las celdas para evitar columnas muy gruesas */
        .table th, .table td {
            padding: 0.4rem 0.6rem !important;
            font-size: 0.95rem;
            vertical-align: middle;
            max-width: 180px;
            word-wrap: break-word;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Controlar ancho de la tabla general */
        .table {
            table-layout: auto;
        }

        /* Ajustar ancho específico si deseas más compacto */
        #serviciosTable th,
        #serviciosTable td {
            max-width: 160px;
        }


    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#serviciosTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "Nada encontrado",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}
