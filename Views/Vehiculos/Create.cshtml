@model amazon.Models.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}
@if (User.IsInRole("3"))
{
    <div class="container">
        <h1 class="text-center mb-4">Crear Vehículo</h1>
        <div class="card shadow-sm" style="max-width: 600px; margin: auto;">
            <div class="card-body">
                <form asp-action="Create">
                    <div class="form-group mb-3">
                        <label asp-for="Marca" class="control-label">Marca</label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Modelo" class="control-label">Modelo</label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Año" class="control-label">Año</label>
                        <input asp-for="Año" type="number" class="form-control" />
                        <span asp-validation-for="Año" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Placa" class="control-label">Placa</label>
                        <input asp-for="Placa" class="form-control" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <!-- Campo oculto para guardar el ID del usuario logueado -->
                    <input type="hidden" asp-for="UsuarioId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value" />

                    <!-- Campo de texto deshabilitado que muestra el nombre del usuario -->
                    <div class="form-group mb-3">
                        <label class="control-label">Cliente</label>
                        <input type="text" class="form-control" value="@User.Identity.Name" disabled />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-success" />
                    </div>
                </form>
                <div class="mt-2">
                    <a asp-action="Index">Volver al Listado</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <h1 class="text-center mb-4">Crear Vehículo</h1>
        <div class="card shadow-sm" style="max-width: 600px; margin: auto;">
            <div class="card-body">
                <form asp-action="Create">
                    <div class="form-group mb-3">
                        <label asp-for="Marca" class="control-label">Marca</label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Modelo" class="control-label">Modelo</label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Año" class="control-label">Año</label>
                        <input asp-for="Año" type="number" class="form-control" />
                        <span asp-validation-for="Año" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Placa" class="control-label">Placa</label>
                        <input asp-for="Placa" class="form-control" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="UsuarioId" class="control-label">Cliente</label>
                        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios">
                            <option value="">Seleccione un cliente</option>
                            <!-- Opciones llenadas desde ViewBag -->
                        </select>
                        <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-success" />
                    </div>
                </form>
                <div class="mt-2">
                    <a asp-action="Index">Volver al Listado</a>
                </div>
            </div>
        </div>
    </div>
}




@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
