@model amazon.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1 class="text-center my-4">Eliminar Usuario</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-header bg-danger text-white text-center">
        <h3>¿Está seguro de que desea eliminar este usuario?</h3>
    </div>
    <div class="card-body">
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Usuario1)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Usuario1)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Rol)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Rol)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>
