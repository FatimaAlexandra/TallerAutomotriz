@model amazon.Models.Inventario

@{
    ViewData["Title"] = "Actualizar Stock";
}

<div class="container mt-4">
    <h2 class="mb-4">Actualizar Stock</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4>@ViewBag.ProductoNombre</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p>
                            <strong>Stock Actual:</strong>
                            <span class="badge bg-@(ViewBag.StockActual < 10 ? "danger" : (ViewBag.StockActual < 20 ? "warning" : "success")) p-2">
                                @ViewBag.StockActual
                            </span>
                        </p>
                    </div>

                    <form asp-action="ActualizarStock" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductoId" />

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label">Nueva Cantidad</label>
                            <input asp-for="Cantidad" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                            <div class="form-text">Ingrese la cantidad total en inventario</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}